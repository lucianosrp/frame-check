{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "compile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "shared",
                "reveal": "silent",
                "echo": false,
                "focus": false,
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "type": "npm",
            "script": "watch",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "reveal": "never",
                "echo": false,
                "focus": false,
                "showReuseMessage": false,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "owner": "typescript",
                    "source": "ts",
                    "applyTo": "closedDocuments",
                    "fileLocation": [
                        "relative",
                        "${workspaceRoot}"
                    ],
                    "pattern": "$tsc-watch",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "(\\s*)(\\d{1,2}:\\d{1,2}:\\d{1,2}(\\s*AM|\\s*PM)?)(\\s*)Starting compilation"
                        },
                        "endsPattern": {
                            "regexp": "((\\s*)(\\d{1,2}:\\d{1,2}:\\d{1,2}(\\s*AM|\\s*PM)?)(\\s*)Compilation complete\\.|Found \\d+ errors?\\. Watching for file changes\\.)"
                        }
                    }
                }
            ]
        }
    ]
}
